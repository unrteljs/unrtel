{
  "name": "@unrteljs/root",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.12.1",
  "author": {
    "name": "UnRTEL.js Team & UnRTEL.js contributors",
    "email": "neko@moeru.ai",
    "url": "https://github.com/unrteljs"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/unrteljs/unrtel.git"
  },
  "scripts": {
    "dev": "pnpm -rF=\"./packages/*\" run --parallel dev",
    "build": "pnpm -rF=\"./packages/*\" run build",
    "test": "vitest --coverage",
    "test:run": "vitest run",
    "lint": "eslint --cache .",
    "lint:fix": "eslint --cache --fix .",
    "attw": "pnpm -rF=\"./packages/*\" run --parallel attw",
    "typecheck": "pnpm -rF=\"./packages/*\" -F=\"./apps/*\" -F run --parallel typecheck",
    "up": "taze -w -r -I -f && pnpm prune && pnpm dedupe",
    "changelogithub": "changelogithub",
    "sizecheck": "npx vite-bundle-visualizer",
    "nolyfill": "pnpm dlx nolyfill"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.14.1",
    "@antfu/ni": "^25.0.0",
    "@arethetypeswrong/cli": "^0.18.2",
    "@arethetypeswrong/core": "^0.18.2",
    "@types/node": "^22.15.31",
    "@unocss/eslint-config": "^66.1.4",
    "@unocss/eslint-plugin": "^66.1.4",
    "bumpp": "^10.1.1",
    "eslint": "^9.28.0",
    "eslint-plugin-import-x": "^4.15.1",
    "rollup": "^4.43.0",
    "taze": "^19.1.0",
    "tsdown": "^0.12.7",
    "typescript": "~5.8.3",
    "unbuild": "^3.5.0",
    "unocss": "^66.1.4",
    "unplugin-unused": "^0.5.1",
    "vite": "^6.3.5",
    "vite-plugin-inspect": "^11.1.0",
    "vitest": "^3.2.3"
  },
  "workspaces": [
    "packages/**",
    "playground"
  ],
  "pnpm": {
    "neverBuiltDependencies": [],
    "overrides": {
      "array-flatten": "npm:@nolyfill/array-flatten@^1.0.44",
      "axios": "npm:feaxios@^0.0.23",
      "is-core-module": "npm:@nolyfill/is-core-module@^1.0.39",
      "isarray": "npm:@nolyfill/isarray@^1.0.44",
      "safe-buffer": "npm:@nolyfill/safe-buffer@^1.0.44",
      "safer-buffer": "npm:@nolyfill/safer-buffer@^1.0.44",
      "side-channel": "npm:@nolyfill/side-channel@^1.0.44",
      "string.prototype.matchall": "npm:@nolyfill/string.prototype.matchall@^1.0.44"
    }
  }
}
